@model KareAjans.UI.ViewModels.UserPermissionsViewModel


<div class="card-body">


    @if (Model.User.UserID != 0)
    {
        <input type="hidden" asp-for="User.UserID" />
        <div class="card-title"><h2>Kullanıcı Düzenle</h2></div>
        <h4 class="card-title">@Model.User.FirstName  @Model.User.LastName </h4>
        <hr />
    }
    else
    {
        <div class="card-title"><h2>Kullanıcı Ekle</h2></div>
        <hr />

    }



    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label class="col-sm-3 control-label col-form-label">İsim:</label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 control-label col-form-label">Soyisim:</label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 control-label col-form-label">Yetkiler:</label>

        <select asp-for="User.PermissionId" class="select2 form-control custom-select" style="width: 100%; height:36px;" asp-items='new SelectList(Model.Permissions.Where(x => ((int)x.UserType) != 2), "PermissionID" , "UserType" )'>
        </select>

    </div>

    <div class="form-group row">
        <label asp-for="User.Email" class="col-sm-3 control-label col-form-label"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 control-label col-form-label">Şifre:</label>
        <input asp-for="User.Password" class="form-control" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>


</div>

<div class="border-top">
    <div class="form-group row">
        <div class="card-body">

            @if (Model.User.UserID != 0)
            {
                <input type="submit" value="Düzenle" onclick="javascript: return ConfirmDelete()" class="btn btn-default" />
            }
            else
            {
                <input type="submit" value="Ekle" onclick="javascript: return ConfirmDelete()" class="btn btn-default" />
            }

        </div>

    </div>
</div>