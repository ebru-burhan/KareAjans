@model KareAjans.Model.OrganizationDTO




<div class="card-body">
    <!--controllerdan newleyerek gelmediğinden model yok  id != 0 yerine null check -->
    @if (Model != null)
    {
        <input type="hidden" asp-for="OrganizationID" />
        <div class="card-title"><h2>Organizasyon Düzenle</h2></div>
        <hr />
    }
    else
    {
        <div class="card-title"><h2>Organizasyon Ekle</h2></div>
        <hr />
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label class="col-sm-5  control-label col-form-label">Organizasyon Adı:</label>
        <input asp-for="OrganizationName" class="form-control" />
        <span asp-validation-for="OrganizationName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-5  control-label col-form-label">Başlangıç Tarihi:</label>
        <input asp-for="StartingDate" class="form-control" />
        <span asp-validation-for="StartingDate" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-5 control-label col-form-label">Bitiş Tarihi:</label>
        <input asp-for="EndingDate" class="form-control" />
        <span asp-validation-for="EndingDate" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-md-5"></div>
        <div class="col-md-9">
            <div class="custom-control custom-checkbox mr-sm-2">
                <input type="checkbox" asp-for="IsLocal" id="IsLocal" class="custom-control-input" />
                <label class="custom-control-label" for="IsLocal">Şehir içi mi?</label>
            </div>
        </div>

    </div>
</div>


<div class="border-top">
    <div class="form-group row">
        <div class="card-body">
            @if (Model != null)
            {
                <input type="submit" value="Düzenle" onclick="javascript: return ConfirmDelete()" class="btn btn-default" />
            }
            else
            {
                <input type="submit" value="Ekle" onclick="javascript: return ConfirmDelete()" class="btn btn-default" />
            }

        </div>
      
    </div>
</div>