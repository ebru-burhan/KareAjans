@model List<KareAjans.Model.OrganizationDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card">
    <div class="card-body">
        <div class="card-title"><h2>Gelir Listesi</h2></div>

        <div class="row">
            <div class="col-md-12">

                <table class="table table-hover" id="incomeTable">
                    <thead>
                        <tr>
                            <th>Organizasyon Adı</th>
                            <th>Toplam Gelir</th>
                            <th colspan="2">  <a asp-action="Add" asp-controller="Income" class="btn btn-outline-success">Gelir Ekle</a> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dto in Model)
                        {
                            <tr>
                                <td>@dto.OrganizationName</td>
                                <td>@String.Format("{0:C2}", @dto.TotalIncome)</td>
                                <td>

                                    <a asp-action="Detail" asp-controller="Income" asp-route-id="@dto.OrganizationID" class="btn  btn-outline-orange">Detay</a>

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
