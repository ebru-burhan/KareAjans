@model List<KareAjans.Model.IncomeDTO>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<h2>Gelir Listesi</h2>


<div class="row">
    <div class="col-md-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Gelir</th>
                    <th>Tarih</th>
                    <th colspan="2"> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dto in Model)
                {
                    <tr>
                        <td>@dto.Amount</td>
                        <td>@dto.CreatedDate</td>
                        <td>

                            <a asp-action="Update" asp-controller="Income" asp-route-id="@dto.IncomeID" class="btn  btn-outline-primary">Düzenle</a>
                            <a asp-action="Delete" asp-controller="Income" asp-route-id="@dto.IncomeID" class="btn  btn-outline-danger">Sil</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>


</div>
