@model List<KareAjans.Model.IncomeDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}




<div class="card">
    <div class="card-body">
        <div class="card-title"><h2>Organizasyon Gelir Listesi</h2></div>
        <div class="row">
            <div class="col-md-12">

                <table class="table table-hover" id="incomeDetailTable">
                    <thead>
                        <tr>
                            <th>Gelir</th>
                            <th>Tarih</th>
                            <th colspan="2">Operasyonlar </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dto in Model)
                        {
                            <tr>
                                <td>@String.Format("{0:C2}", @dto.Amount)</td>
                                <td>@dto.CreatedDate</td>
                                <td>

                                    <a asp-action="Update" asp-controller="Income" asp-route-id="@dto.IncomeID" class="btn  btn-outline-primary">Düzenle</a>
                                    <a asp-action="Delete" asp-controller="Income" asp-route-id="@dto.IncomeID" onclick="javascript: return ConfirmDelete()" class="btn  btn-outline-danger">Sil</a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
