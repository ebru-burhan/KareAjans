@model KareAjans.Model.IncomeDTO

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<hr />

<div class="card">
    <div class="card-body">
        <div class="card-title"><h2>@Model.Organization.OrganizationName Gelir Düzenlemesi</h2></div>
        <div class="row">
            <div class="col-md-4">
                <form class="form-horizontal" asp-action="Update" asp-controller="Income" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="IncomeID" />
                    <input type="hidden" asp-for="OrganizationId" />


                    <div class="form-group row">
                        <label asp-for="Amount" class="col-sm-3 control-label col-form-label"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="border-top">
                        <div class="card-body">
                            <div class="form-group row">
                                <input type="submit" value="Düzenle" onclick="javascript: return ConfirmDelete()" class="btn btn-default" />
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
