@model List<KareAjans.Model.OrganizationDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Raporlar</h2>


<div class="row">
    <div class="col-md-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Organizasyon Adı</th>
                    <th>Başlangıç Tarihi</th>
                    <th>Bitiş Tarihi</th>
                    <th>Şehir İçi Mi?</th>
                    <th>Toplam Gelir</th>
                    <th > <a class="btn btn-outline-success">##</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dto in Model)
                {
                    <tr>
                        <td>@dto.OrganizationName</td>
                        <td>@dto.StartingDate</td>
                        <td>@dto.EndingDate</td>
                        <td>@dto.IsLocal</td>
                        <td>@dto.TotalIncome</td>
                        <td>
                            <a asp-action="Detail" asp-controller="Accounting" asp-route-id="@dto.OrganizationID" class="btn  btn-outline-orange">Detay</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>


</div>
