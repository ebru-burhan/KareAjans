@model List<KareAjans.Model.ModelEmployeeDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-horizontal" asp-action="Search" asp-controller="ModelEmployee" method="get">
    <input type="text" name="firstName"/>
    <input type="text" name="lastName"/>
    <input type="submit" value="Ara" class="btn btn-default" />
</form>


<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive" >
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Cinsiyet</th>
                    <th colspan="2" >Operasyonlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Gender</td>
                        <td>
                            <a asp-action="Update" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" class="btn  btn-outline-primary">Düzenle</a>
                            <a asp-action="Delete" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" onclick="javascript: return ConfirmDelete()" class="btn btn-outline-danger">Sil</a>
                            <a asp-action="Detail" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" class="btn  btn-outline-orange">Detay</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>