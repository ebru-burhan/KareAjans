@model KareAjans.UI.ViewModels.ModelEmployeeSearchViewModel
@using KareAjans.Entity.Enums
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form class="form-horizontal" asp-action="Search" asp-controller="ModelEmployee" method="get">

        <div class="card-body">
            <h4 class="card-title">Filtreleme</h4>

            <div class="row">

                <div class="col-md-4">

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">İsim:</label>
                        <div class="col-md-9">
                            <input type="text" name="firstName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Soyisim:</label>
                        <div class="col-md-9">
                            <input type="text" name="lastName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Cinsiyet:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="gender" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="">Hepsi</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Profesyonellik Dereceleri:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="professionalDegreeId" asp-items='new SelectList(Model.ProfessionalDegrees, "ProfessionalDegreeID", "Title")'>
                                <option value="">Hepsi</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row m-t-20">
                        <label class="col-sm-3 text-right control-label col-form-label">Yaş:</label>
                        <div class="col-md-9">
                            <input type="number" name="age" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Kilo:</label>
                        <div class="col-md-9">
                            <input type="number" name="weight" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Boy:</label>
                        <div class="col-md-9">
                            <input type="number" name="height" class="form-control" />
                        </div>
                    </div>

                </div>

                <!--burda ayrılıyyyoooorrrrr-->
                <div class="col-md-4">

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Ayakkabı Numarası:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="shoeSize" asp-items="Html.GetEnumSelectList<ShoeSize>()">
                                <option value="">Hepsi</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Göz Rengi:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="eyeColor" asp-items="Html.GetEnumSelectList<EyeColor>()">
                                <option value="">Hepsi</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Saç Rengi:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="hairColor" asp-items="Html.GetEnumSelectList<HairColor>()">
                                <option value="">Hepsi</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Beden:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="bodySize" asp-items="Html.GetEnumSelectList<BodySize>()">
                                <option value="">Hepsi</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Sürücü Belgesi:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="hasDrivingLicence">
                                <option value="">Hepsi</option>
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Şehir dışı çalışma:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="isWorkingOutsideTheCity">
                                <option value="">Hepsi</option>
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Yabancı Dil:</label>
                        <div class="col-md-9">
                            <input name="foreignLanguage" class="form-control" />
                        </div>
                    </div>

                </div>


                <!-- ORG -->
                <div class="col-md-4">
                    <div class="form-group row">
                        <label class="col-sm-3 text-right control-label col-form-label">Seçili organizasyona uygun:</label>
                        <div class="col-md-9">
                            <select class="select2 form-control custom-select" style="width: 100%; height:36px;" name="organizationId" asp-items='new SelectList(Model.Organizations, "OrganizationID", "OrganizationName")'>
                                <option value="">Seçiniz</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="border-top">
            <div class="form-group row">
                <div class="card-body">
                    <input type="submit" value="Ara" class="btn btn-default" />
                </div>
            </div>
        </div>

    </form>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Profesyonel Derece</th>
                    <th>Cinsiyet</th>
                    <th>Yaş</th>
                    <th>Göz Rengi</th>
                    <th>Saç Rengi</th>
                    <th>Beden</th>
                    <th>Ayakkabı Numarası</th>
                    <th colspan="2">Operasyonlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SearchResults)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Title</td>
                        <td>@item.Gender</td>
                        <td>@item.Age</td>
                        <td>@item.EyeColor</td>
                        <td>@item.HairColor</td>
                        <td>@item.BodySize</td>
                        <td>@item.ShoeSize</td>
                        <td>
                            @if (Model.SelectedOrganizationId != 0)
                            {
                                <a asp-action="Assign" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" asp-route-organizationId="@Model.SelectedOrganizationId" class="btn btn-outline-purple">Görevlendir</a>
                            }
                            <a asp-action="Detail" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" class="btn  btn-outline-orange">Detay</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
