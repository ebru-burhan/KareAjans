@model List<KareAjans.UI.ViewModels.ModelEmployeeViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive" id="modelEmployeeTable">
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Yaş</th>
                    <th>Cinsiyet</th>
                    <th>Profesyonel Derece</th>
                    <th colspan="2" class="no-sort">Operasyonlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Age</td>
                        <td>@item.Gender</td>
                        <td>@item.Title</td>
                        <td>
                            <a asp-action="Update" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" class="btn  btn-outline-primary">Düzenle</a>
                            <a asp-action="Delete" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" onclick="javascript: return ConfirmDelete()" class="btn btn-outline-danger">Sil</a>
                            <a asp-action="Detail" asp-controller="ModelEmployee" asp-route-id="@item.ModelEmployeeID" class="btn  btn-outline-orange">Detay</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
